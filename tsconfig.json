{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "isolatedModules": false
  },
  "include": ["src"]
}
